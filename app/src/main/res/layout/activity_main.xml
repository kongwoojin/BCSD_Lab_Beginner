<?xml version="1.0" encoding="utf-8"?>

<!-- ConstraintLayout -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/id_field"/>

    <EditText
        android:id="@+id/id_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:hint="아이디"
        app:layout_constraintBottom_toTopOf="@id/pw_field" />

    <EditText
        android:id="@+id/pw_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text="로그인"
        app:layout_constraintEnd_toEndOf="@id/pw_field"
        app:layout_constraintStart_toStartOf="@+id/pw_field"
        app:layout_constraintTop_toBottomOf="@+id/pw_field" />

    <ImageButton
        android:id="@+id/google_oauth"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5sp"
        android:background="@android:color/transparent"
        android:padding="0sp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_logo_google"
        app:layout_constraintEnd_toStartOf="@+id/naver_oauth"
        app:layout_constraintStart_toStartOf="@id/login"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <ImageButton
        android:id="@+id/naver_oauth"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5sp"
        android:background="@android:color/transparent"
        android:padding="0sp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_logo_naver"
        app:layout_constraintEnd_toStartOf="@+id/kakao_oauth"
        app:layout_constraintStart_toEndOf="@id/google_oauth"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <ImageButton
        android:id="@+id/kakao_oauth"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5sp"
        android:background="@android:color/transparent"
        android:padding="0sp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_logo_kakao"
        app:layout_constraintEnd_toEndOf="@id/login"
        app:layout_constraintStart_toEndOf="@id/naver_oauth"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <TextView
        android:id="@+id/find_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="5sp"
        android:text="비밀번호 찾기"
        app:layout_constraintEnd_toStartOf="@id/register"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/naver_oauth" />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginTop="10sp"
        android:text="가입하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/find_pw"
        app:layout_constraintTop_toBottomOf="@id/naver_oauth" />

</androidx.constraintlayout.widget.ConstraintLayout>